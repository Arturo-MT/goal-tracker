{
  "name": "goal-tracker",
  "version": "1.0.0",
  "description": "This is a personal project I was thiking on do.",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node-dev src/index.ts",
    "start": "cross-env NODE_ENV=production node build/index.js",
    "tsc": "tsc",
    "test": "cross-env NODE_ENV=test jest --verbose --detectOpenHandles --silent",
    "test:watch": "npm run test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Arturo-MT/goal-tracker.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Arturo-MT/goal-tracker/issues"
  },
  "homepage": "https://github.com/Arturo-MT/goal-tracker#readme",
  "dependencies": {
    "cors": "2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "16.0.0",
    "express": "4.18.0",
    "mongoose": "6.3.1",
    "morgan": "1.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "4.17.13",
    "@types/jest": "^27.5.0",
    "@types/supertest": "^2.0.12",
    "jest": "^28.0.3",
    "nodemon": "2.0.15",
    "supertest": "6.2.3",
    "ts-jest": "28.0.1",
    "ts-node-dev": "1.1.8",
    "ts-standard": "11.0.0",
    "typescript": "4.6.3"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": "./node_modules/ts-standard/eslintrc.json",
    "env": {
      "jest": true
    }
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest",
    "testRegex": "\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
}
